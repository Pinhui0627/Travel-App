<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51E6B2B2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Travel"
    tools:showIn="@layout/activity_travel">

    <Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:id="@+id/line01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/space"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtcountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="請選擇國家"
            android:textColor="#5B359C"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spncountry"
            android:layout_width="187dp"
            android:layout_height="match_parent"
            android:dropDownWidth="wrap_content"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnsearch"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:text="查詢景點"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <Space
        android:id="@+id/space2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/line01" />

    <LinearLayout
        android:id="@+id/line02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/space2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#9B3FB5"
            android:text="上一張"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#B02779"
            android:text="下一張"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Space
        android:id="@+id/space3"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/line02" />

    <Space
        android:id="@+id/space4"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/space3" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/space4"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/imgPhoto"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/txtResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2C3A80"
                android:labelFor="@+id/imgPhoto"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>



</RelativeLayout>